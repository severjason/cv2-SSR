{
  "name": "cv2-ssr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon \"src/app/dev.js\"",
    "serve": "NODE_ENV=production firebase serve",
    "predeploy": "npm run build-public && npm run build-funcs && npm run build-server && npm run build-app && npm run copy-deps",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions/**\" && rimraf \"dist/public\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-funcs": "babel \"src/functions\" --out-dir \"dist/functions\"",
    "build-server": "cpx \"src/app/static/**/*.*\" \"dist/functions/static\" -C && babel \"src/app/i18n.js\" --out-dir \"dist/functions\" && babel \"src/app/server.js\" --out-dir \"dist/functions\" && babel \"src/app/config.js\" --out-dir \"dist/functions\" && babel \"src/app/lib\" --out-dir \"dist/functions/lib\"",
    "build-app": "next build \"src/app/\"",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.10",
    "@types/react-helmet": "^5.0.15",
    "express": "^4.17.1",
    "i18next": "^19.4.4",
    "next": "9.3.5",
    "next-i18next": "^4.3.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "^6.0.0",
    "firebase-admin": "^6.2.0",
    "firebase-functions": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "typescript": "^3.8.3",
    "cpx": "^1.5.0",
    "firebase-tools": "^6.1.0",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.2"
  }
}
